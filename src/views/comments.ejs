<section id="app">
  <a href="/"><- Voltar</a><br>
  <h1>{{post.Title}}</h1>
  <p>{{post.Content}}</p>
  <br>
  <h3>Coment√°rios</h3>
  <ul>

    <li v-for="comments in comments">
      {{ comments.UserName }} - {{ comments.Comment }}
    </li>

    <form @submit.prevent="createComment" >
      <span>Name</span><br>
      <input
              v-model="UserName"
              type="text"
              placeholder="Enter your name"
      /><br>
      <span>Your comment</span><br>
      <input
              v-model="Comment"
              type="comment"
              placeholder="Enter your comment"
      /><br>
      <input
              class="submit"
              type="submit"
              value="Submit"
      >
    </form>
  </ul>

</section>
<script>

  var http = axios.create({
    baseURL: "<%- apiUrl%>",
    timeout: 10000,
  });
  const postId = "<%- postId %>"

  var app = new Vue({
    el: "#app",
    data: {
      post: {},
      comments: [],
      Comment: '',
      UserName: '',
      PostId: ''
    },
    methods: {
      loadPost() {
        http.get("/posts/" + postId).then((response) => {
          this.post = response.data;
        });
      },
      loadComments() {
        http.get(`/comments/${postId}`).then((response) => {
          this.comments = response.data;
          this.PostId = postId
        });
      },
      createComment() {
        http.post(`/comments/addComment`,{
          UserName: this.UserName,
          Comment: this.Comment,
          PostId: this.PostId
        }).then((response) => {
          http.get(`/comments/${postId}`).then((response) => {
            this.comments = response.data;
            this.UserName = ''
            this.Comment = ''
          });
        }).catch((error)=>{
          alert('input error, try later')
        })

      }
    },
    mounted() {
      this.loadPost();
      this.loadComments()
    },
  });
</script>
